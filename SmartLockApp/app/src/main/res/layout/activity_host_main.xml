<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".GuestMainActivity"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="#fbfbfb"
    >

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

    <!--navigation bar at the bottom of main activity-->
    <RelativeLayout
        android:id="@+id/navigation_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/lock_image"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lock_normal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/space_image"
            android:layout_toEndOf="@+id/space_image" />
        <ImageView
            android:id="@+id/events_image"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="1dp"
            android:src="@drawable/events_normal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lock_image"
            android:layout_toEndOf="@+id/lock_image" />

        <ImageView
            android:id="@+id/history_image"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="3dp"
            android:src="@drawable/history_normal"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/events_image"
            android:layout_toEndOf="@+id/events_image" />

        <ImageView
            android:id="@+id/personal_image"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_alignParentRight="true"
            android:paddingTop="3dp"
            android:src="@drawable/user"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/space_image"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/icon_home" />

    </RelativeLayout>
    <!--end of navigation bar-->
</RelativeLayout>
