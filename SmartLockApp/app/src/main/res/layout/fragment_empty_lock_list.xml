<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Locks"
        android:textColor="#ff606060"
        android:textSize="26dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have no access to any locks."/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send a request to your hosts"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="for access to locks."
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/requestAccessButton"
        android:layout_width="246dp"
        android:layout_height="46dp"
        android:text="Request Access"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/corner"/>

</LinearLayout>